<html>
<%if current_user.present?%>
<h1>/home/<%= current_user.login %>/</h1>
<% else %>
  <h1>Access denied :\</h1>
<% end %>
</html>

<% if current_user %>
  rss_token: <input type="text" size="25" value="<%= current_user.rss_token || "Token not generated!" %>" id="token_field" readonly>
  <button onclick="copy()">Copy</button>
  <br><%= link_to 'Выйти', "sign_out" %>
<% else %>
  <p>Please, <%= link_to 'Sign in', "sign_in" %> or <%= link_to 'Sign up', "sign_up" %> to continue...</p>
  <p><%= link_to "<--- Main page", root_path %></p>
<% end %>

<script>
  function copy() {
    var copyText = document.getElementById("token_field");

    copyText.select();
    copyText.setSelectionRange(0, 99999); /*For mobile devices*/

    document.execCommand("copy");
  }
</script>