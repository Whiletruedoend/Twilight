<div class="page-header">
  <h1>Новый пост</h1></div>
</div>
<%= form_with(model: Post.new(user: @current_user)) do |f| %>
    <%= render 'shared/errors', object: @post %>
  <div>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <%= f.submit %>
<% end %>

<p><%= link_to "<--- Main page", root_path %></p>