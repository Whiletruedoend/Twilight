<div class="markdown-container">
  <div class="markdown-left">
    <%= form_with(model: Post.new(user: @current_user)) do |f| %>
          <%= render 'shared/errors', object: @post %>

          <div class="field">
            <%= f.label :title %><br />
            <%= f.text_field :title, placeholder: "Enter title..." %>
          </div>

      <div class="field">
        <%= f.text_area :content, placeholder: "Enter some text..." %>
      </div>

      <% if Tag.last.present? %>
        <div class="field">
          <%= f.label :tags %><br />
          <% Tag.all.each do |tag| %>
            <%=check_box("tags", tag.id, {:checked => tag.enabled_by_default})%><%=tag.name%>
          <% end %>
        </div>
      <% else %>
        Tags not found!<br />
      <% end %>

      <% if Platform.last.present? %>
        <div class="field">
          <%= f.label :platforms %><br />
          <% Platform.all.each do |platform| %>
            <%=check_box("platforms", platform.title, {:checked => false})%><%=platform.title%>
          <% end %>
        </div>
      <% else %>
        Platforms not found!<br />
      <% end %>

      <%= f.submit %> <% end %>
  </div>

  <div id="preview"></div>
</div>
<p><%= link_to "<--- Main page", root_path %></p>

<%= javascript_include_tag 'showdown.min.js' %>
<%= javascript_include_tag 'script.js' %>