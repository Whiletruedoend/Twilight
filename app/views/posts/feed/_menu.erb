<aside class="menu">
    <ul class="list">
        <a href='/feed'>
            <li class="list-item is-active">
                <i class="glyphicon glyphicon-home"></i>
                <span>Home</span>
            </li>
        </a>

        <% if current_user.present? %>
            <a href='<%=edit_user_path%>'>
                <li class="list-item">
                    <i class="glyphicon glyphicon-user"></i>
                    <span>Profile</span>
                </li>
            </a>
        <% else %>
            <a href='<%=sign_in_path%>'>
                <li class="list-item">
                    <i class="glyphicon glyphicon-user"></i>
                    <span>Login</span>
                </li>
            </a>
        <% end %>

        <% if current_user.present? && allowed_to?(:create_posts?, current_user) %>
            <a href='<%=posts_new_path%>'>
                <li class="list-item">
                    <i class="glyphicon glyphicon-pencil"></i>
                    <span>New post</span>
                </li>
            </a>
            <a href='<%=import_post_path%>'>
                <li class="list-item">
                    <i class="glyphicon glyphicon-circle-arrow-up"></i>
                    <span>Import</span>
                </li>
            </a>
        <% end %>

        <% if Rails.configuration.credentials[:root_page] != 2 %>
            <a href='/'>
                <li class="list-item">
                    <i class="glyphicon glyphicon-triangle-left"></i>
                    <span>Back</span>
                </li>
            </a>
        <% else %>
        <a href='<%=posts_path%>'>
                <li class="list-item">
                    <i class="glyphicon glyphicon-triangle-left"></i>
                    <span>Classic Design</span>
                </li>
            </a>
        <% end %>

        <!-- <a href='/about'>
            <li class="list-item">
                <i class="glyphicon glyphicon-info-sign"></i>
                <span>About</span>
            </li>
        </a> -->
    </ul>
</aside>