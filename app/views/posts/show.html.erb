<h1><%=@post.title%></h1>
<div class="post-header">
  <h4>Date: <%=@post.created_at%> | Author: <%=@post.user.login%><% if current_user == @post.user %> | <a href="<%=@post.id%>/edit">Редактировать</a> | <a href="/posts/delete/<%=@post.id%>">Удалить статью</a><% end %></h4>
  <h4>Tags: <%=get_post_tags(@post)%></h4>
  <h4>Published platforms:
    <% platforms = get_published_platforms(@post) %>
    <% if platforms.present? %>
      <% platforms.each do |platform| %>
        <% if platform[:link].present? %>
        <a target="_blank" href="<%=platform[:link]%>"><%=platform[:name]%></a>
        <% else %>
          <%=platform[:name]%>
        <% end %>
      <% end %>
    <% else %>
        no platforms
    <% end %>
      </h4>
</div>
<br><br><br><br>

<div class="post-content">
  <%=markdown(@post.get_content)%>
</div>

<p><%= link_to "<--- All posts", posts_path %></p>
<p><%= link_to "<--- Main page", root_path %></p>