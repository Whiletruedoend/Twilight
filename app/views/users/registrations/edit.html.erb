<body id="bg">
  <div class="container">
    <h2>/home/<%= current_user.login %>/</h2>

    <ul class="nav nav-tabs">
      <li class="active"><a data-toggle="tab" href="#profile"><%=I18n.t("edit.profile_tab")%></a></li>
      <li><a data-toggle="tab" href="#channels"><%=I18n.t("edit.channels_tab")%></a></li>
      <li><a data-toggle="tab" href="#manage"><%=I18n.t("edit.manage_tab")%></a></li>
      <li><a data-toggle="tab" href="#stats"><%=I18n.t("edit.stats_tab")%></a></li>
    </ul>

    <div class="tab-content">
      <div id="profile" class="tab-pane in active title">
        <%= render "users/registrations/edit_profile" %>
      </div>
      <div id="channels" class="tab-pane">
        <%= render "users/registrations/channels_tab" %>
      </div>
      <div id="manage" class="tab-pane">
        <%= render "users/registrations/manage_tab" %>
      </div>
      <div id="stats" class="tab-pane">
        <%= render "users/registrations/stats_tab" %>
      </div>
    </div>

    <div class="links">
      <div><%= link_to "<--- #{I18n.t("posts.main_page")}", root_path %></div>
      <div style="float: right;">
      <%=link_to I18n.t("main.log_out"), "sign_out" %> | 
      <%= link_to I18n.t("edit.cancel_account_button"), registration_path(resource_name),
      data: { confirm: I18n.t("edit.cancel_account_confirmation") }, method: :delete %></div>
    </div>

  </div>
</body>

<script>
    function copy() {
        var copyText = document.getElementById("token_field");

        copyText.select();
        copyText.setSelectionRange(0, 99999); /*For mobile devices*/

        document.execCommand("copy");
    }
</script>

<%= javascript_include_tag 'application.js' %>