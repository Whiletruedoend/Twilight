<h2>New tag</h2>

<div class="block">
  <%= form_with(model: Tag.new) do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.check_box :enabled %>
      <%= f.label "Enabled by default for users" %>
    </div><br />

    <div class="actions">
      <%= f.submit "Create" %>
    </div>
  <% end %>
</div>

<div class="block">
    All tags:
    <% Tag.all.each do |tag| %>
      <%=check_box("tags", tag.id, {:checked => true})%><%=tag.name%>
    <% end %>
</div>

<p><%= link_to "<--- Main page", root_path %></p>